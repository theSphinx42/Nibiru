# Sandbox Environment Configuration

# Database
DATABASE_URL=postgresql://nibiru_test:test_password@localhost:5432/nibiru_sandbox
TEST_DATABASE_URL=postgresql://nibiru_test:test_password@localhost:5432/nibiru_test

# Redis Configuration
REDIS_URL=redis://localhost:6379/1
REDIS_TEST_URL=redis://localhost:6379/2

# JWT Settings
JWT_SECRET_KEY=sandbox_secret_key_for_testing
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=NIBIRU-Sandbox
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Storage Settings
UPLOAD_DIR=./sandbox_uploads
AVATAR_DIR=./sandbox_uploads/avatars
BACKGROUND_DIR=./sandbox_uploads/backgrounds
SIGIL_DIR=./sandbox_uploads/sigils
QR_DIR=./sandbox_uploads/qr_codes

# Feature Flags
ENABLE_CRYPTO_PAYMENTS=true
ENABLE_MARKETPLACE=true
ENABLE_LEADERBOARD=true
ENABLE_REPUTATION=true
ENABLE_BADGES=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=./logs/sandbox.log

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Sandbox-specific Settings
SANDBOX_MODE=true
MOCK_EXTERNAL_SERVICES=true
AUTO_CLEANUP_INTERVAL=30  # minutes
PRESERVE_TEST_DATA=false 